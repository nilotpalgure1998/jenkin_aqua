pipeline {
  agent any 
  stages {
     stage('Build') {
       steps { 
          sh 'docker build -t local/ctf01:latest .'
       }
     }
     
     stage('Scan') {
     	steps {
	   script {
               def trivyScan = sh(script: 'trivy -q -f json -o /var/lib/jenkins/reports/trivy-report.json local/ctf01:latest', returnStdout: true)
               writeFile file: 'trivyScan.md', text: trivyScan 
	   }
        }
     }
  }
}
